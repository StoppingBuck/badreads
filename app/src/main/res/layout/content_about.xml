<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_headline_1"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:paddingTop="12dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppTheme.Headline5" />

        <TextView
            android:id="@+id/about_paragraph_1"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_badreads"
            android:textAppearance="@style/TextAppearance.AppTheme.Body1" />

        <TextView
            android:id="@+id/about_headline_2"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_open_library_title"
            android:textAppearance="@style/TextAppearance.AppTheme.Headline6" />

        <TextView
            android:id="@+id/about_paragraph_2"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_open_library"
            android:textAppearance="@style/TextAppearance.AppTheme.Body1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/about_visit_open_library"
            style="@style/AboutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_openlibrary_btn" />

        <TextView
            android:id="@+id/about_headline_4"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_shelves_title"
            android:textAppearance="@style/TextAppearance.AppTheme.Headline6" />

        <TextView
            android:id="@+id/about_paragraph_4"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_shelves"
            android:textAppearance="@style/TextAppearance.AppTheme.Body1" />

        <TextView
            android:id="@+id/about_headline_5"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_adding_books_title"
            android:textAppearance="@style/TextAppearance.AppTheme.Headline6" />

        <TextView
            android:id="@+id/about_paragraph_5"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_adding_books"
            android:textAppearance="@style/TextAppearance.AppTheme.Body1" />

        <TextView
            android:id="@+id/about_headline_6"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_book_covers_title"
            android:textAppearance="@style/TextAppearance.AppTheme.Headline6" />

        <TextView
            android:id="@+id/about_paragraph_6"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_book_covers"
            android:textAppearance="@style/TextAppearance.AppTheme.Body1" />

        <TextView
            android:id="@+id/about_headline_3"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_source_title"
            android:textAppearance="@style/TextAppearance.AppTheme.Headline6" />

        <TextView
            android:id="@+id/about_paragraph_3"
            style="@style/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_source"
            android:textAppearance="@style/TextAppearance.AppTheme.Body1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/about_visit_source"
            style="@style/AboutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_source_string" />

    </LinearLayout>
</ScrollView>