<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:isScrollContainer="true"
    >
    
    <TextView
        android:id="@+id/about_headline_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="12dp"
        android:textAppearance="@style/TextAppearance.AppTheme.Headline5"
        android:text="@string/app_name"
        style="@style/AboutText"
        />
    <TextView
        android:id="@+id/about_paragraph_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppTheme.Body1"
        android:text="This is a book logger for tracking which books you've read and would like to read. You can import you current library from a CSV (using the goodreads format)."
        style="@style/AboutText"
        />
    <TextView
        android:id="@+id/about_headline_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppTheme.Headline6"
        android:text="Open Library"
        style="@style/AboutText"
        />
    <TextView
        android:id="@+id/about_paragraph_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppTheme.Body1"
        android:text="The search and book covers are provided by Open Library, whose goal is to have 'one web page for every book ever published'."
        style="@style/AboutText"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/about_visit_open_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit: Open Library"
        style="@style/AboutText"
        />
    <TextView
        android:id="@+id/about_headline_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppTheme.Headline6"
        android:text="Source Code"
        style="@style/AboutText"
        />
    <TextView
        android:id="@+id/about_paragraph_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppTheme.Body1"
        android:text="Badreads is an Free and Open Source (GPLv3), you can find the sourcecode hosted on Github."
        style="@style/AboutText"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/about_visit_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source"
        style="@style/AboutText"
        />

</LinearLayout>