                android:textIsSelectable="true"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/new_duplicate_author" />


            <TextView
                android:id="@+id/new_duplicate_publisher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:hint="publisher"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textIsSelectable="true"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/new_duplicate_author_extras" />

            <TextView
                android:id="@+id/new_duplicate_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:hint="publication year"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textIsSelectable="true"
                card_view:layout_constraintEnd_toStartOf="@+id/new_duplicate_original_year"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/new_duplicate_publisher" />

            <TextView
                android:id="@+id/new_duplicate_original_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:hint="original publication year"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textIsSelectable="true"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/new_duplicate_year"
                card_view:layout_constraintTop_toBottomOf="@+id/new_duplicate_publisher" />

            <TextView
                android:id="@+id/new_duplicate_isbn13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:hint="ISBN 13"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textIsSelectable="true"
                card_view:layout_constraintEnd_toStartOf="@+id/new_duplicate_isbn10"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/new_duplicate_original_year" />

            <TextView
                android:id="@+id/new_duplicate_isbn10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:hint="ISBN 10"
